<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >
	
    <ImageView
        android:src="@drawable/logo2"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/lblLogo" 
        />
    
    <EditText
        android:hint="@string/hintCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:id="@+id/txtCorreo">
		<requestFocus />
        
    </EditText>
    
    <EditText 
        android:id="@+id/txtLogin"
        android:hint="@string/hintLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/terminos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/lblTerminos" />
    
    <Button 
        android:id="@+id/btnEntrar"
        android:text="@string/btnEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/mi_boton2"
        />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnRegistrar" 
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/mi_boton"
        />

</LinearLayout>